{
    "env": {
        "es6": true,
        "browser": true,
        "jasmine": true,
        "node": true,
        "jest": true
    },
    "settings": {
        "react": {
            "pragma": "h",
            "version": "detect"
        }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "react-hooks"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "rules": {
        "react/jsx-props-no-spreading": 0,
        "no-console": "warn", // Allow console logs, but give warning.
        "react/require-default-props": 0, // Disable require default props, as we use preact.
        "import/prefer-default-export": "warn",
        "react-hooks/exhaustive-deps": "warn",
        "@typescript-eslint/no-unused-vars": "error", // Error when variable is not used
        "react-hooks/rules-of-hooks": "error",
        "no-void": "error",
        "no-var": "error",
        "no-lonely-if": "error",
        "prefer-const": "error",
        "import/extensions": 0,
        "import/no-unresolved": 0,
        "react/jsx-filename-extension": 0,
        "react/jsx-one-expression-per-line": 0,
        "jsx-a11y/label-has-associated-control": 0,
        "@typescript-eslint/ban-ts-ignore": "off",
        "@typescript-eslint/no-empty-function": "warn",
        "@typescript-eslint/no-use-before-define": "off",
        "no-debugger": "off",
        "no-else-return": "error",
        "no-self-compare": "error",
        "semi": 0, // Don't requrie semicolon at the end of a line
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ], // indent on react components
        "react/jsx-indent-props": [
            "error",
            4
        ], // indent on react components props
        "jsx-quotes": [
            1,
            "prefer-double"
        ], // double quotes for jsx
        "quotes": [
            2,
            "single"
        ], // Single quotes for strings.
        "@typescript-eslint/explicit-member-accessibility": [
            "error",
            {
                "accessibility": "no-public"
            }
        ],
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": "error",
        "camelcase": [
            "error",
            {
                "ignoreDestructuring": true,
                "properties": "never"
            }
        ],
        "no-redeclare": "off",
        "@typescript-eslint/no-redeclare": [
            "error"
        ],
        "react/no-unknown-property": [
            "error",
            {
                "ignore": [
                    "class"
                ]
            }
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "never",
                "objects": "never",
                "imports": "never",
                "exports": "always",
                "functions": "never"
            }
        ]
    }
}